<UserControl
    x:Class="DaleGhent.NINA.GroundStation.NtfySh.SendToNtfyShSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DaleGhent.NINA.GroundStation.NtfySh"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:localutil="clr-namespace:DaleGhent.NINA.GroundStation.Utilities"
    Name="UC"
    d:DataContext="{d:DesignInstance Type=local:SendToNtfySh}"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" MinWidth="600">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"  />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,2,10,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="Title" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,2,10,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                HorizontalScrollBarVisibility="Auto"
                MaxLines="1"
                Text="{Binding Title, UpdateSourceTrigger=LostFocus}"
                TextWrapping="NoWrap" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,10,10,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{ns:Loc LblMessage}" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Height="250"
                Margin="10,10,10,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                AcceptsReturn="True"
                AcceptsTab="True"
                Text="{Binding Message, UpdateSourceTrigger=LostFocus}"
                TextWrapping="Wrap"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,2,10,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="Tags" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Margin="10,2,10,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                HorizontalScrollBarVisibility="Auto"
                MaxLines="1"
                Text="{Binding Tags, UpdateSourceTrigger=LostFocus}"
                TextWrapping="NoWrap" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Margin="10,2,10,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="Priority" />
            <ComboBox
                Grid.Row="3"
                Grid.Column="1"
                Margin="10,2,10,2"
                Width="100"
                MaxWidth="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemsSource="{Binding Source={util:EnumBindingSource {x:Type local:NtfyShPriorityLevels}}}"
                SelectedItem="{Binding Priority}"/>

        </Grid>

        <StackPanel
            Margin="10,10,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="150"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                util:ButtonHelper.DialogResult="True"
                IsDefault="True">
                <Button.Content>
                    <TextBlock
                        Margin="5,2,5,2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{ns:Loc LblOK}" />
                </Button.Content>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>