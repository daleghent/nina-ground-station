<UserControl
    x:Class="DaleGhent.NINA.GroundStation.SendToPushover.SendToPushoverSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DaleGhent.NINA.GroundStation.SendToPushover"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="UC"
    d:DataContext="{d:DesignInstance Type=local:SendToPushover}"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"  />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,10,10,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="Title" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,10,10,2"
                Text="{Binding Title, UpdateSourceTrigger=LostFocus}"
                HorizontalScrollBarVisibility="Auto" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,10,10,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{ns:Loc LblMessage}" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="600"
                Height="250"
                MaxWidth="600"
                MaxHeight="400"
                Margin="10,10,10,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AcceptsReturn="True"
                AcceptsTab="True"
                Text="{Binding Message, UpdateSourceTrigger=LostFocus}"
                TextWrapping="Wrap"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto" />
        </Grid>

        <GroupBox Header="Message Options">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*"  />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,10,10,2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Priority" />
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="150"
                    Margin="10,10,10,2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding Priorities}"
                    SelectedItem="{Binding Priority}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,10,10,2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Sound" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="150"
                    Margin="10,10,10,2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding NotificationSounds}"
                    SelectedItem="{Binding NotificationSound}" />
            </Grid>
        </GroupBox>

        <StackPanel
            Margin="10,10,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="150"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                util:ButtonHelper.DialogResult="True"
                IsDefault="True">
                <Button.Content>
                    <TextBlock
                        Margin="5,2,5,2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{ns:Loc LblOK}" />
                </Button.Content>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>